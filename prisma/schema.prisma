generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum DiscussionType {
  PIVOT_STRATEGY
  MVP_FEEDBACK
  RESOURCE_SHARING
  FUNDING_INSIGHTS
  GENERAL
}

model Post {
  id                     String          @id @default(uuid())
  title                  String
  content                String
  author                 String
  likes                  Int             @default(0)
  createdAt              DateTime        @default(now())
  discussionType         DiscussionType  @default(GENERAL)
  validationScore        Int             @default(0)
  potentialImpact        Int             @default(0)
  complexityLevel        Int             @default(0)
  collaborationPotential Int             @default(0)
  tags                   String?         // Comma-separated tags
  industry               String?         // Optional industry classification
  comments               Comment[]       // Links comments to posts
  impactVotes            ImpactVote[]    // New relation to impact votes
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  author    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  //Business specific fields
  eventType   String   // e.g., "Networking", "Workshop", "Pitch Competition"
  industry    String   // Fixed typo from "Sting" to "String"
  
  //Logistics
  startDate   DateTime
  endDate     DateTime
  location    String
  address     String
  isVirtual   Boolean  @default(false)
  meetingLink String?  //Optional, for virtual events
  
  //Basic tracking
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
model ImpactVote {
  id        String   @id @default(uuid())
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
  userId    String   // Using string for session user ID
  voteType  String   // Add this back to the schema
  voteValue Int
  createdAt DateTime @default(now())

  @@unique([postId, userId])
}
