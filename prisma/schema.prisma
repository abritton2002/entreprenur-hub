generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id        String    @id @default(uuid())
  title     String
  content   String
  author    String
  likes     Int       @default(0)  // Added the likes field with default value 0
  createdAt DateTime  @default(now())
  comments  Comment[] // Links comments to posts
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  author    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  //Business specific fields
  eventType   String   // e.g., "Networking", "Workshop", "Pitch Competition"
  industry    String   // Fixed typo from "Sting" to "String"
  
  //Logistics
  startDate   DateTime
  endDate     DateTime
  location    String
  address     String
  isVirtual   Boolean  @default(false)
  meetingLink String?  //Optional, for virtual events
  
  //Basic tracking
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
